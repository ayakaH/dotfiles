#!/bin/bash

if [[ `tmux ls|cut -d":" -f1` == work ]];then
    tmux -2 attach;
else
    session_name="work"
    cd ~
    tmux -2 new-session -d -s $session_name -n 0
    cd /tmp/N
    #tmux split-window -v
    #tmux split-window -h
    #tmux selectp -U
    #tmux split-window -h
    #tmux selectp -L
    tmux new-window -t $session_name:1 -n 1
    cd ~/git/dotfiles
    tmux new-window -t $session_name:2 -n 2
    cd ~/git/archlinuxcn
    tmux new-window -t $session_name:3 -n 3
    tmux select-window -t $session_name:0
    tmux attach-session -2 -t $session_name
fi
